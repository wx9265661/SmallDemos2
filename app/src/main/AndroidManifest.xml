<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zhanghaochen.smalldemos">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".framework.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demos.FxActivity"
            android:exported="false"
            android:label="函数图像" />

        <activity
            android:name=".demos.ConstraintLayoutDemoActivity"
            android:exported="false"
            android:label="ConstraintLayout" />

        <activity
            android:name=".demos.EditPictureActivity"
            android:exported="false"
            android:label="画图" />

        <activity
            android:name=".demos.CircleBoardActivity"
            android:exported="false"
            android:label="仪表盘" />

        <activity
            android:name=".demos.MyRecyclerViewActivity"
            android:exported="false"
            android:label="RecyclerView"
            android:theme="@style/AppFullTheme" />

        <activity
            android:name=".demos.SomeChartShowActivity"
            android:exported="false"
            android:theme="@style/AppFullTheme" />

        <activity
            android:name=".demos.MyViewsDisplayActivity"
            android:exported="false"
            android:label="自定义控件" />

        <activity
            android:name=".demos.recyclerstudy.RecyclerViewDemoActivity"
            android:exported="false" />
    </application>

</manifest>
